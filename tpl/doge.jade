doctype html
html
    head
        title= "Real time web chat"
        link(rel='stylesheet', href='/stylesheets/css/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        section.row
            section.col-md-8
                section#content
                .controls
                    form
                        | Send message to : <select name='users' class='users-select'><option value='name'>Everyone</option></select>
                        div.input-group
                            span.input-group-addon @
                            input(type='text', class="form-control field", placeholder="Username")
                        //input.send(type='submit', value='send')
                        | <button type="submit" class="btn btn-default send">Send</button>
                        input.private(type='submit', value='private')
            section.col-md-4
                h3 Liste des utilisateurs
                ul#users-list


        script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.js')
        script(src='/socket.io/socket.io.js')

        script(src='/scripts/scripts.js') 